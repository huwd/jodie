%html
  %head
    %meta{charset: "utf-8"}
    %meta{name: "viewport", content: "width=device-width, initial-scale=1, user-scalable=no" }

    %title
      = t(:page_title)
    = stylesheet_link_tag "application"
    = stylesheet_link_tag "assets/stylesheets/css/main"

  %body{class: page_classes + " is-loading-0 is-loading-1"}
    = yield
    = javascript_include_tag "https://code.jquery.com/jquery-2.1.1.min.js"
    = javascript_include_tag "application"
    /[if lte IE 8] <script src="assets/javascripts/ie/html5shiv.js"></script>
    %noscript
      %link{:href => "assets/stylesheets/css/noscript.css", :rel => "stylesheet"}/
    /[if lte IE 9] <link rel="stylesheet" href="assets/stylesheets/css/ie9.css" />
    /[if lte IE 8] <link rel="stylesheet" href="assets/stylesheets/css/ie8.css" />
